<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{{layer}} - Tile Server</title>

  <link rel="stylesheet" type="text/css" href="{{base_url}}/maplibre-gl.css" />
  <link rel="stylesheet" type="text/css" href="{{base_url}}/maplibre-gl-inspect.css" />

  <script src="{{base_url}}/maplibre-gl.js"></script>
  <script src="{{base_url}}/maplibre-gl-inspect.js"></script>
</head>

<body style="margin:0;padding:0;font-family:Arial,Helvetica,sans-serif;">
  <h1 style="position:absolute;top:5px;right:0;width:240px;margin:0;font-size:18px;">Layer list</h1>
  <div id="map" style="position:absolute;top:0;left:0;right:250px;bottom:0;"></div>
  <div id="layerList" style="position:absolute;top:35px;right:0;bottom:0;width:240px;">

  <script>
    const baseURL = "{{base_url}}";
    const id = "{{id}}";
    const layer = "{{layer}}";

    fetch(`${baseURL}/geojsons/${id}.json`, {
        method: "GET",
        headers: {
          "Content-Type": "application/json"
        },
      })
      .then((response) => {
        if (response.status === 200) {
          return response.json();
        } else {
          alert(`Failed to fetch GeoJSON info: Status code: ${response.status} - ${response.statusText}`);
        }
      })
      .then((jsonResponse) => {
        const style = {
          "version": 8,
          "sources": {},
          "layers": [
            {
              "id": "background",
              "type": "background",
              "paint": {
                "background-color": "#FFF"
              },
              "layout": {
                "visibility": "visible"
              }
            }
          ]
        };

        const geoJSONColors = {};

        style.sources[layer] = {
          "type": "geojson",
          "data": jsonResponse.geojsons[layer].url
        };

        const r = Math.floor(Math.random() * 256);
        const g = Math.floor(Math.random() * 256);
        const b = Math.floor(Math.random() * 256);

        if (jsonResponse.geojsons[layer].geometryTypes.includes("polygon") === true) {
          geoJSONColors.polygon = `rgba(${r}, ${g}, ${b}, 0.3)`;

          style.layers.push(
            {
              "id": `${layer}_polygon`,
              "source": layer,
              "type": "fill",
              "paint": {
                "fill-color": geoJSONColors.polygon,
                "fill-antialias": true,
                "fill-outline-color": geoJSONColors.polygon
              },
              "layout": {
                "visibility": "visible"
              },
              "filter": ["==", "$type", "Polygon"]
            }
          );
        }

        if (jsonResponse.geojsons[layer].geometryTypes.includes("line") === true) {
          geoJSONColors.line = `rgba(${r}, ${g}, ${b}, 0.6)`;

          style.layers.push(
            {
              "id": `${layer}_line`,
              "source": layer,
              "type": "line",
              "paint": {
                "line-color": geoJSONColors.line
              },
              "layout": {
                "line-join": "round",
                "line-cap": "round",
                "visibility": "visible"
              },
              "filter": ["==", "$type", "LineString"]
            }
          );
        }

        if (jsonResponse.geojsons[layer].geometryTypes.includes("circle") === true) {
          geoJSONColors.circle = `rgba(${r}, ${g}, ${b}, 0.8)`;

          style.layers.push(
            {
              "id": `${layer}_circle`,
              "source": layer,
              "type": "circle",
              "paint": {
                "circle-color": geoJSONColors.circle,
                "circle-radius": 2
              },
              "layout": {
                "visibility": "visible"
              },
              "filter": ["==", "$type", "Point"]
            }
          );
        }

        const map = new maplibregl.Map({
          container: "map",
          hash: true,
          style: style
        });

        map.addControl(new maplibregl.NavigationControl({
          visualizePitch: true
        }));

        map.addControl(new MaplibreInspect({
          showInspectMap: true,
          showInspectButton: false,
          useInspectStyle: false
        }));

        map.on("load", () => {
          const layerList = document.getElementById("layerList");

          for (const geometryType in geoJSONColors) {
            const item = document.createElement("div");

            item.innerHTML = `
              <div style="display:flex;align-items:center;cursor:pointer;">
                <div style="width:15px;height:15px;display:inline-block;background:${geoJSONColors[geometryType]};"></div>
                <span style="margin-left:5px;color:${geoJSONColors[geometryType]};display:inline-block;max-width:200px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">${layer}_${geometryType}</span>
              </div>
            `;

            item.onclick = () => {
              const newVisibility = map.getLayoutProperty(`${layer}_${geometryType}`, "visibility") === "none" ? "visible" : "none";

              map.setLayoutProperty(`${layer}_${geometryType}`, "visibility", newVisibility);

              item.style.textDecoration = newVisibility === "visible" ? "none" : "line-through";
            };

            layerList.appendChild(item);
          }
        });

        let currentMarker;

        map.on("click", (event) => {
          if (currentMarker) {
            currentMarker.remove();
          }

          currentMarker = new maplibregl.Marker({
            draggable: true
          })
            .setLngLat([event.lngLat.lng, event.lngLat.lat])
            .addTo(map);

          alert(`Position: [${event.lngLat.lng}, ${event.lngLat.lat}]`);

          currentMarker.on("dragend", () => {
            const lngLat = currentMarker.getLngLat();

            alert(`Position: [${lngLat.lng}, ${lngLat.lat}]`);
          });
        });

        map.on("contextmenu", (event) => {
          if (currentMarker) {
            currentMarker.remove();

            currentMarker = undefined;
          }
        });
      })
      .catch((error) => {
        alert(`Failed to fetch GeoJSON info: Status code: ${error.message}`);
      });
  </script>
</body>

</html>