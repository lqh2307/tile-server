<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Preview - Tile Server</title>
  <link rel="stylesheet" type="text/css" href="/index.css{{&key_query}}" />
  <style>
    .back-to-top {
      position: fixed;
      bottom: 15px;
      right: 20px;
      border: 1px solid #ddd;
      padding: 10px 20px;
      border-radius: 25px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      font-size: 13px;
      background: #fff;
      text-decoration: none;
      display: none;
      align-items: center;
    }
    .back-to-top:hover {
      background-color: #f0f0f0;
    }
    .xyz-link {
      display: none;
      cursor: pointer;
    }
  </style>
  <script>
    function toggleXYZ(id, event) {
      event.preventDefault();

      const el = document.getElementById(id);

      if (el.style.display === 'none') {
        el.style.display = 'inline-block';
      } else {
        el.style.display = 'none';
      }
    }

    function copyToClipboard(el) {
      el.select();

      document.execCommand('copy');

      setTimeout(() => {
        el.style.display = 'none';
      }, 500);
    }

    function scrollToTop(event) {
      event.preventDefault();

      window.scrollTo({ 
        top: 0,
        behavior: 'smooth',
      });
    }

    window.addEventListener('scroll', () => {
      const backToTopButton = document.querySelector('.back-to-top');

      if (window.scrollY > 200) {
        backToTopButton.style.display = 'flex';
      } else {
        backToTopButton.style.display = 'none';
      }
    });
  </script>
</head>
<body>
  <section>
    <h1 class="title">
      Style and Tileset preview
    </h1>
    {{#if styles}}
      <h2 class="box-header">
        Styles
      </h2>
      <div class="box">
      {{#each styles}}
        <div class="item">
          {{#if thumbnail}}
            <img src="/styles/{{@key}}/{{thumbnail}}{{&../key_query}}" alt="{{name}} preview" />
          {{else}}
            <img src="/images/placeholder.png{{&key_query}}" alt="{{name}} preview" />
          {{/if}}
          <div class="details">
            <h3>{{name}}</h3>
            <p class="identifier">identifier: {{@key}}</p>
            <p class="services">
              services: <a href="/styles/{{@key}}/style.json{{&../key_query}}">Style</a> | <a href="/styles/{{@key}}.json{{&../key_query}}">TileJSON</a>
              {{#if serve_wmts}}
                | <a href="/styles/{{@key}}/wmts.xml{{&../key_query}}">WMTS</a>
              {{/if}}
              {{#if xyz_link}}
                | <a href="#" onclick="toggleXYZ('xyz_style_{{@key}}', event);">XYZ</a>
                <input id="xyz_style_{{@key}}" class="xyz-link" type="text" value="{{&xyz_link}}" onclick="copyToClipboard(this);" />
              {{/if}}
            </p>
          </div>
          <div class="viewers">
              <a class="btn" href="/styles/{{@key}}/{{&../key_query}}{{viewer_hash}}">Viewer</a>
              <a class="btn" href="/styles/{{@key}}/?{{&../key_query_part}}raster{{viewer_hash}}">Raster</a>
              <a class="btn" href="/styles/{{@key}}/?{{&../key_query_part}}vector{{viewer_hash}}">Vector</a>
          </div>
        </div>
      {{/each}}
      </div>
    {{/if}}
    {{#if data}}
      <h2 class="box-header">
        Data
      </h2>
      <div class="box">
      {{#each data}}
        <div class="item">
          {{#if thumbnail}}
            <img src="/data/{{@key}}/{{thumbnail}}{{&../key_query}}" alt="{{name}} preview" />
          {{else}}
            <img src="/images/placeholder.png{{&key_query}}" alt="{{name}} preview" />
          {{/if}}
          <div class="details">
            <h3>
              {{name}}
            </h3>
            <div class="identifier">
              identifier: {{@key}}
            </div>
            <div class="identifier">
              size: {{formatted_filesize}}
            </div>
            <div class="identifier">
              type: {{#if is_vector}}vector{{else}}raster{{/if}} {{#if source_type}} | ext: {{source_type}}{{/if}}
            </div>
            <p class="services">
              services: <a href="/data/{{@key}}.json{{&../key_query}}">TileJSON</a>
              {{#if xyz_link}}
                | <a href="#" onclick="toggleXYZ('xyz_data_{{@key}}', event);">XYZ</a>
                <input id="xyz_data_{{@key}}" class="xyz-link" type="text" value="{{&xyz_link}}" onclick="copyToClipboard(this);" />
              {{/if}}
            </p>
          </div>
          <div class="viewers">
            {{#if is_vector}}
                <a class="btn" href="/data/{{@key}}/{{&../key_query}}{{viewer_hash}}">Inspect</a>
            {{else}}
                <a class="btn" href="/data/{{@key}}/{{&../key_query}}{{viewer_hash}}">View</a>
            {{/if}}
          </div>
        </div>
      {{/each}}
      </div>
    {{/if}}
  </section>
  <a href="#" class="back-to-top" onclick="scrollToTop(event);">Back to top</a>
</body>
</html>
